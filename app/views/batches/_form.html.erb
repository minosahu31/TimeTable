<%= form_for @batch do |f| %><!-- students form -->
	<!-- show  errors -->
	<% if @batch.errors.any? %>
		<h3 class="errors"><%= pluralize(@batch.errors.count, "error") %> prohibited this company from being saved:</h2>
		<ul class="errors">
			<% @batch.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<div class="form-group">
		<label for="batch_id">Batch ID:</label>
		<%= f.text_field :batch_id, class: "form-control" %>
	</div>	
	
	<div class="form-group">
		<label for="year">Year:</label>
		<%= f.text_field :year, class: "form-control"%>
	</div>	

	<div class="form-group">
		<label for="room_no"> Room Number :</label>
		<%= f.text_field :room_no, class: "form-control"%>
	</div>	
	
	<div class="form-group">
		<label for="department_id"> Department :</label>
		<%= f.select(:department_id, options_for_select(@departments_array), {}, { class: "form-control" }) %>
	</div>	

	<div class="form-group">
		<%= f.submit :class => "btn btn-success" %>
	</div>
 

<% end %><!-- /.students form -->	
				