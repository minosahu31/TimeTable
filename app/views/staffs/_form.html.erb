<%= form_for @staff do |f| %><!-- students form -->
	<!-- show  errors -->
	<% if @staff.errors.any? %>
		<h3 class="errors"><%= pluralize(@staff.errors.count, "error") %> prohibited this company from being saved:</h2>
		<ul class="errors">
			<% @staff.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<div class="form-group">
		<label for="staff_id">Staff ID:</label>
		<%= f.text_field :staff_id, class: "form-control" %>
	</div>	
	
	<div class="form-group">
		<label for="firstName">First Name:</label>
		<%= f.text_field :first_name, class: "form-control"%>
	</div>	

	<div class="form-group">
		<label for="lastName">Last Name:</label>
		<%= f.text_field :last_name, class: "form-control"%>
	</div>	
	
	<div class="form-group">
		<label for="email">Email Address:</label>
		<%= f.text_field :email, class: "form-control"%>
	</div>	
		
	<div class="form-group">
		<label for="department_id"> Department :</label>
		<%= f.select(:department_id, options_for_select(@departments_array), {}, { class: "form-control" }) %>
	</div>	

	<div class="form-group">
		<%= f.submit :class => "btn btn-success" %>
	</div>
 

<% end %><!-- /.students form -->	
				