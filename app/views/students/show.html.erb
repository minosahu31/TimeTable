<div id="style-margin">
	<!-- Starting main container -->
	<div class="container">
		<h1>Student <%= link_to "Back", students_path, class: "btn btn-success pull-right" %><%= link_to "Edit", edit_student_path(@student), class: "btn btn-success pull-right" %><%= link_to "Delete", student_path(@student), method: 'delete', data: { confirm: "Are you sure want to delete?" } , class: "btn btn-success pull-right" %></h1><hr/>
		<div class="col-md-10 col-md-offset-1 table-responsive">
			<table class="table table-bordered">
				<thead>
					<tr>
						<th> RegNo </th>
						<th> First Name </th>
						<th> Last Name </th>
						<th> Email </th>
						<th> DOB </th>
					</tr>
				</thead>
				<tbody>
						<tr>
							<td><%= @student.register_number %></td>
							<td><%= @student.first_name %></td>
							<td><%= @student.last_name %></td>
							<td><%= @student.email %></td>
							<td><%= @student.dob %></td>
						</tr>	
				</tbody>	
			</table>	
		</div>	
	</div>	
	<!-- end of main container -->
</div>	