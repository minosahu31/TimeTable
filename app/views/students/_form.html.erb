

<%= form_for @student do |f| %><!-- students form -->
	<!-- show  errors -->
	<% if @student.errors.any? %>
		<h3 class="errors"><%= pluralize(@student.errors.count, "error") %> prohibited this company from being saved:</h2>
		<ul class="errors">
			<% @student.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<div class="form-group">
		<label for="regNo">Register Number:</label>
		<%= f.text_field :register_number, class: "form-control" %>
	</div>	
	
	<div class="form-group">
		<label for="firstName">First Name:</label>
		<%= f.text_field :first_name, class: "form-control"%>
	</div>	

	<div class="form-group">
		<label for="lastName">Last Name:</label>
		<%= f.text_field :last_name, class: "form-control"%>
	</div>	
	
	<div class="form-group">
		<label for="email">Email Address:</label>
		<%= f.text_field :email, class: "form-control"%>
	</div>	
	
	<div class="form-group">
		<label for="dob">Date of birth:</label>
		<%= f.text_field :dob, class: "form-control"%>
	</div>

	<div class="form-group">
		<label for="department_id"> Batch Year :</label>
		<%= f.select(:batch_id, options_for_select(@bacthes_array), {}, { class: "form-control" }) %>
	</div>	

	<h3>Address</h3>

	<div class="form-group">
		<label for="street">Street:</label>
		<%= text_field_tag :street, '',class: "form-control" %>
	</div>

	<div class="form-group">
		<label for="city">City:</label>
		<%= text_field_tag :city, '', class: "form-control" %>
	</div>

	<div class="form-group">
		<label for="state">State:</label>
		<%= text_field_tag :state, '', class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.submit :class => "btn btn-success" %>
	</div>
 

<% end %><!-- /.students form -->	
				
